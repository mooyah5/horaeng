pipeline {
    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker_hub')
    }
    agent any

    stages {
        stage('build'){
            steps{
                script{
                    try {
                        dir('./backend/gateway-service'){
                            sh 'chmod +x gradlew'
                            sh './gradlew clean build'
                        }
                    } catch (e) {
                        sh 'echo "gateway-service 삭제 실패"'
                    }
                    try{
                        sh 'docker build -t mocaa/gateway-service ./backend/gateway-service'
                    }catch(e){
                        sh 'echo "docker 이미지빌드중 실패"'
                    }
                }
            }
        }
        stage('Login'){
            steps{
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('Deploy image') {
            steps {
                script {
                    sh 'docker push mocaa/gateway-service'
                }
            }
        }
        stage('Cleaning up') {
            steps {
                sh 'docker rmi mocaa/gateway-service'
            }
        }
        stage('Deploy') {
            steps {
                echo 'hello start'
                sshagent (credentials: ['ssh-deploy']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ubuntu@43.201.97.204 '
                        cd /home/ubuntu/deploy/gateway
                        ./dev.sh
                        '
                      """
                }
            }
        }
    }
}